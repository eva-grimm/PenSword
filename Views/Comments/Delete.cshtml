@model Comment

@{
    ViewData["Title"] = "Delete";
}

<div class="post-single-wrapper axil-section-gap bg-color-white">
    <div class="container">
        <h3>Are you sure you want to delete this comment?</h3>
        <div>
            <blockquote class="fs-5">
                @Model.Body
            </blockquote>
            @if (Model.Updated == null)
            {
                <p class="small">Comment created: @Model.Created.ToString("MMM dd, yyyy")</p>
            }
            else
            {
                <p class="small">Comment last edited: @Model.Updated?.ToString("MMM dd, yyyy")</p>
            }
            @if (Model.UpdateReason != null)
            {
                <p class="small">Reason given for the edit: @Model.UpdateReason</p>
            }
            <hr />
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Delete" class="btn btn-danger" />
            </form>
        </div>
        <div class="mt-3">
            @if (Model.BlogPost != null)
            {
                <a asp-action="Details" asp-route-slug="@Model.BlogPost.Slug"
                   class="btn btn-secondary">Cancel</a>
            }
            else
            {
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            }
        </div>
    </div>
</div>