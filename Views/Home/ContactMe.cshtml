@using PenSword.Models.ViewModels
@model ContactMeViewModel

<!-- Start Banner Area  -->
<div class="axil-banner banner-style-1 bg_image bg_image-01">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="inner">
                    <h1 class="title">Contact Me</h1>
                    <p class="description">
                        Need help? Have feedback? <br />
                        Please let us know. We're here to help'
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- End Banner Area  -->
<!-- Start Post List Wrapper  -->
<div class="axil-post-list-area axil-section-gap bg-color-white">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-xl-8">
                <!-- Start About Area  -->
                <div class="axil-about-us">
                    <!-- Start Contact Form  -->
                    @if (User.Identity!.IsAuthenticated)
                    {
                        <div class="axil-section-gapTop axil-contact-form-area">
                            <h4 class="title mb--10">Send Us a Message</h4>
                            <p class="b3 mb--30">Your email address will not be published. All fields below are required.</p>
                            <form method="post" asp-action="ContactMe" class="contact-form--1 row">
                                <div class="col-lg-6 col-md-6 col-12">
                                    <div class="form-group">
                                        <label for="contact-name">First Name</label>
                                        <input asp-for="BlogUser!.FirstName">
                                    </div>
                                </div>
                                <div class="col-lg-6 col-md-6 col-12">
                                    <div class="form-group">
                                        <label for="contact-phone">Last Name</label>
                                        <input asp-for="BlogUser!.LastName">
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="form-group">
                                        <label>Email</label>
                                        <input asp-for="BlogUser!.Email">
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="form-group">
                                        <label for="contact-message">Message</label>
                                        <textarea id="editor" name="message"></textarea>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="form-submit">
                                        <button type="submit" class="axil-button button-rounded btn-primary">Submit</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    }
                    else
                    {
                        <div class="axil-total-comment-post">
                            <div class="add-comment-button cerchio">
                                <a class="axil-button button-rounded"
                                   asp-area="Identity"
                                   asp-page="/Account/Login"
                                   asp-route-returnUrl="@Url.Action("ContactMe", "Home")" tabindex="0">
                                    <span>Login to Send a Message</span>
                                </a>
                            </div>
                        </div>
                    }
                    <!-- End Contact Form  -->
                </div>
                <!-- End About Area  -->
            </div>
        </div>
    </div>
</div>
<!-- End Post List Wrapper  -->
@section scripts{

    <!--Sweet Alerts-->
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        let message = '@(ViewBag.SwalMessage)';
        if (!message.includes("Error") && message != '') {
            Swal.fire({
                backdrop: false,
                icon: 'success',
                title: message,
                showConfirmButton: true
            });
        } else if (message.includes("Error")) {
            Swal.fire({
                backdrop: false,
                icon: 'error',
                title: 'Oops...',
                text: message
            });
        }
    </script>
    <!--End Sweet Alerts-->
    <!--CK Editor-->
    <script src="https://cdn.ckeditor.com/ckeditor5/37.1.0/classic/ckeditor.js"></script>

    <script>
        ClassicEditor
            .create(document.querySelector('.editor'), {
                licenseKey: '',
            })
            .then(editor => {
                window.editor = editor;
            });
    </script>
    <!--End CK Editor-->
 }