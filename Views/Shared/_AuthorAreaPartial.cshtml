@inject IImageService _ImageService;

<div class="axil-author-area axil-author-banner bg-color-grey">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="about-author">
                    <div class="media">
                        <div class="thumbnail">
                            <a href="#">
                                <img src="@_ImageService.ConvertByteArrayToFile(null, null, DefaultImage.AuthorImage)"
                                     class="author-thumbnail" alt="Author Image">
                            </a>
                        </div>
                        <div class="media-body">
                            <div class="author-info">
                                <h1 class="title"><a href="#">Cadence Eva Custin</a></h1>
                                <span class="b3 subtitle">Full-Stack Developer</span>
                            </div>
                            <div class="content">
                                <p class="b1 description">
                                    Living life by the motto, "You didn't get this far by giving up." It hasn't failed me yet.
                                </p>
                                <ul class="social-share-transparent size-md">
                                    <li>
                                        <a href="https://www.linkedin.com/in/cadence-eva-custin/" alt="linkedin">
                                            <i class="fab fa-linkedin-in"></i>
                                        </a>
                                    </li>
                                    <li>
                                        <a href="https://github.com/eva-grimm" alt="github">
                                            <i class="bi bi-github"></i>
                                        </a>
                                    </li>
                                    <li>
                                        <a href="mailto:eva.custin@gmail.com" alt="email">
                                            <i class="bi bi-envelope-at"></i>
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>