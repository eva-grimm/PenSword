@model BlogPost
@inject IImageService _ImageService;

<div class="banner banner-single-post post-formate post-layout pb--40">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <!-- Start Single Slide  -->
                <div class="content-block">
                    <!-- Start Post Content  -->
                    <div class="post-content">
                        <div class="post-cat">
                            <div class="post-cat-list">
                                <a class="hover-flip-item-wrapper" href="#">
                                    <span class="hover-flip-item">
                                        <span data-text="@Model.Category?.Name">@Model.Category?.Name</span>
                                    </span>
                                </a>
                            </div>
                        </div>
                        <h1 class="title">
                            @Model.Title
                        </h1>
                        <!-- Post Meta  -->
                        <div class="post-meta-wrapper">
                            <div class="post-meta">
                                <a asp-controller="Home" asp-action="ShowAuthorProfile"
                                   asp-route-authorId="@Model?.Id">
                                    <div class="post-author-avatar border-rounded">
                                        <img src="@_ImageService.ConvertByteArrayToFile(@Model?.Author?.ImageData,
                                            @Model?.Author?.ImageType, DefaultImage.AuthorImage)"
                                             alt="Author Image" style="height:80px;width:80px">
                                    </div>
                                </a>
                                <div class="content">
                                    <h6 class="post-author-name">
                                        <a class="hover-flip-item-wrapper" asp-controller="Home"
                                           asp-action="ShowAuthorProfile" asp-route-authorId="@Model?.Id">
                                            <span class="hover-flip-item">
                                                <span data-text="@Model?.Author?.FullName">@Model?.Author?.FullName</span>
                                            </span>
                                        </a>
                                    </h6>
                                    <ul class="post-meta-list">
                                        <li>@Model?.Created.ToString("MMM dd, yyyy")</li>
                                        <li>@Model?.Comments.Count</li>
                                    </ul>
                                </div>
                            </div>
                            <ul class="social-share-transparent justify-content-end">
                                @if (Model?.Author?.LinkedIn != null)
                                {
                                    <li>
                                        <a href="@Model?.Author?.LinkedIn" alt="LinkedIn">
                                            <i class="fab fa-linkedin-in"></i>
                                        </a>
                                    </li>
                                }
                                @if (Model?.Author?.GitHub != null)
                                {
                                    <li>
                                        <a href="@Model?.Author?.GitHub" alt="GitHub">
                                            <i class="bi bi-github"></i>
                                        </a>
                                    </li>
                                }
                                @if (Model?.Author?.Twitter != null)
                                {
                                    <li>
                                        <a href="@Model?.Author?.Twitter" alt="Twitter">
                                            <i class="bi bi-twitter"></i>
                                        </a>
                                    </li>
                                }
                                @if (Model?.Author?.Facebook != null)
                                {
                                    <li>
                                        <a href="@Model?.Author?.Facebook" alt="Facebook">
                                            <i class="bi bi-facebook"></i>
                                        </a>
                                    </li>
                                }
                                @if (Model?.Author?.Instagram != null)
                                {
                                    <li>
                                        <a href="@Model?.Author?.Instagram" alt="Instagram">
                                            <i class="bi bi-instagram"></i>
                                        </a>
                                    </li>
                                }
                                @if (Model?.Author?.Website != null)
                                {
                                    <li>
                                        <a href="@Model.Author.Website" alt="Website">
                                            <i class="bi bi-link-45deg"></i>
                                        </a>
                                    </li>
                                }
                                @if (Model?.Author?.Email != null)
                                {
                                    <li>
                                        <a href="mailto:@Model.Author.Email" alt="Email">
                                            <i class="bi bi-envelope-at"></i>
                                        </a>
                                    </li>
                                }
                            </ul>
                        </div>
                    </div>
                    <!-- End Post Content  -->
                </div>
                <!-- End Single Slide  -->
            </div>
        </div>
    </div>
</div>